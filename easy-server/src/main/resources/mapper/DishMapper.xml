<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.easy.mapper.DishMapper">

    <!-- Dynamic update of dish data -->
    <update id="update">
        update dish
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="updateUser != null">
                update_user =#{updateUser}
            </if>
        </set>
        where id = #{id}
    </update>

    <!-- Batch delete dish data -->
    <delete id="deleteByIds">
        delete from dish where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <!-- Conditional query -->
    <select id="list" resultType="com.easy.vo.DishVO">
        select d.*, c.name categoryName from dish d left join category c on d.category_id = c.id
        <where>
            <if test="name != null and name !=''">
                d.name like concat('%', #{name}, '%')
            </if>
            <if test="categoryId != null">
                and d.category_id = #{categoryId}
            </if>
            <if test="status != null">
                and c.status = #{status}
            </if>
        </where>
        order by d.create_time desc
    </select>

    <!-- Count the number of available dishes by ID -->
    <select id="countEnableDishByIds" resultType="java.lang.Long">
        select count(*) from dish where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
        and status = 1
    </select>

    <!-- Query dishes by category and dish name -->
    <select id="selectDishByCondition" resultType="com.easy.entity.Dish">
        select * from dish where status = 1
        <if test="categoryId != null">
            and category_id = #{categoryId}
        </if>
        <if test="name != null and name != ''">
            and name like concat('%', #{name} ,'%')
        </if>
        order by create_time desc
    </select>


    <!-- Define resultMap to encapsulate data -->
    <resultMap id="dishVoMap" type="com.easy.vo.DishVO">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="categoryId" column="category_id"/>
        <result property="price" column="price"/>
        <result property="image" column="image"/>
        <result property="description" column="description"/>
        <result property="status" column="status"/>
        <result property="updateTime" column="update_time"/>

        <collection property="flavors" ofType="com.easy.entity.DishFlavor">
            <id property="id" column="df_id"/>
            <result property="dishId" column="df_dish_id"/>
            <result property="name" column="df_name"/>
            <result property="value" column="df_value"/>
        </collection>
    </resultMap>


    <!-- Query dishes and their associated dish flavor information -->
    <select id="listDishWithFlavors" resultMap="dishVoMap">
        SELECT d.*, df.id df_id, df.dish_id df_dish_id, df.name df_name, df.value df_value
        FROM dish d
        LEFT JOIN dish_flavor df ON d.id = df.dish_id
        <where>
            <if test="categoryId != null">
                d.category_id = #{categoryId}
            </if>
            <if test="status != null">
                AND d.status = #{status}
            </if>
        </where>
    </select>
</mapper>
